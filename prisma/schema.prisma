generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Vote {
  id          Int        @id @default(autoincrement())
  date        DateTime   @default(now())
  nom         String
  choix       Choix[]
  rencontre   Rencontre  @relation(fields: [rencontreId], references: [id])
  rencontreId Int
  status      StatusVote @default(INITAL)
}

model Choix {
  id         Int       @id @default(autoincrement())
  date       DateTime  @default(now())
  type       TypeChoix
  syndicat   Syndicat  @relation(fields: [syndicatId], references: [id])
  syndicatId Int
  vote       Vote      @relation(fields: [voteId], references: [id])
  voteId     Int

  @@unique([syndicatId, voteId])
}

model Syndicat {
  id      Int      @id @default(autoincrement())
  nom     String   @unique
  mandats Mandat[] @relation()
  choix   Choix[]
}

model Mandat {
  syndicat    Syndicat  @relation(fields: [syndicatId], references: [id])
  syndicatId  Int
  rencontre   Rencontre @relation(fields: [rencontreId], references: [id])
  rencontreId Int
  mandat      Int       @default(1)

  @@id([syndicatId, rencontreId])
}

model Rencontre {
  id        Int             @id @default(autoincrement())
  dateDebut DateTime
  dateFin   DateTime
  type      TypeRencontre
  status    StatusRencontre @default(INITIAL)
  mandats   Mandat[]        @relation()
  votes     Vote[]
  // sessions  Session[]
}

