enum TypeChoix {
  POUR
  CONTRE
  ABSTENTION
  NPPV
}

enum StatusVote {
  INITAL
  EN_VOTE
  CLOTURE
}

enum TypeRencontre {
  CONGRES
  CF
  BF
  PU
}

enum StatusRencontre {
  INITIAL
  DEMARE
  CLOTURE
}
